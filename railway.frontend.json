{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "rm -rf node_modules/.cache || true && npm ci --cache /tmp/.npm && npm run build"
  },
  "deploy": {
    "startCommand": "npx serve -s build -l $PORT --single",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
